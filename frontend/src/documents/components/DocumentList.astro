---
import type { MockDocument } from "@/mocks";
import {
  Card,
  CardHeader,
  CardContent,
  CardFooter,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

interface Props {
  documents: MockDocument[];
}

const { documents } = Astro.props;

// Group by category and subcategory
const groupedDocs = documents.reduce(
  (acc, doc) => {
    if (!acc[doc.category]) {
      acc[doc.category] = {};
    }
    const subcategory = doc.subcategory || "_default";
    if (!acc[doc.category][subcategory]) {
      acc[doc.category][subcategory] = [];
    }
    acc[doc.category][subcategory].push(doc);
    return acc;
  },
  {} as Record<string, Record<string, MockDocument[]>>
);

// Format date
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<div class="py-8">
  <div class="mb-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-2 text-foreground">
      Documentación
    </h1>
    <p class="text-lg text-muted-foreground">
      Explora nuestra biblioteca completa de guías y recursos
    </p>
  </div>

  {
    Object.entries(groupedDocs).map(([category, subcategories]) => (
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-6 pb-2 border-b-2 border-border text-foreground">
          {category}
        </h2>
        {Object.entries(subcategories).map(([subcategory, docs]) => (
          <div class="mb-8">
            {subcategory !== "_default" && (
              <h3 class="text-xl font-medium mb-4 text-muted-foreground">
                {subcategory}
              </h3>
            )}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {docs.map((doc) => (
                <a href={`/docs/${doc.slug}`} class="no-underline block group">
                  <Card className="h-full transition-all duration-200 hover:-translate-y-0.5 hover:shadow-lg hover:border-primary">
                    <CardHeader className="pb-4">
                      <div class="flex flex-wrap gap-2 mb-3">
                        <Badge variant="secondary">{doc.category}</Badge>
                        {doc.subcategory && (
                          <Badge variant="outline">{doc.subcategory}</Badge>
                        )}
                      </div>
                      <h3 class="text-lg font-semibold leading-snug text-foreground group-hover:text-primary transition-colors mb-2">
                        {doc.title}
                      </h3>
                      <time
                        class="text-xs text-muted-foreground block"
                        datetime={doc.updatedAt}
                      >
                        {formatDate(doc.updatedAt)}
                      </time>
                    </CardHeader>
                    <CardContent className="pb-4">
                      <p class="text-sm leading-relaxed text-muted-foreground line-clamp-3">
                        {doc.excerpt}
                      </p>
                    </CardContent>
                    <CardFooter className="pt-4 border-t border-border">
                      <span class="text-sm font-medium text-primary inline-block transition-transform group-hover:translate-x-1">
                        Leer más →
                      </span>
                    </CardFooter>
                  </Card>
                </a>
              ))}
            </div>
          </div>
        ))}
      </section>
    ))
  }
</div>
