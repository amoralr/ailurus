---
import Header from "@/shared/components/layout/Header.astro";
import Footer from "@/shared/components/layout/Footer.astro";
import { Toaster } from "@/components/ui/toaster";
import "@/styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: "website" | "article";
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title = "Ailurus - Documentation Framework",
  description = "Documentation that evolves with your code. Modern framework built with Astro + NestJS.",
  ogImage = "/logo.png",
  ogType = "website",
  author = "Ailurus Team",
  publishedTime,
  modifiedTime,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    {author && <meta name="author" content={author} />}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:site_name" content="Ailurus Documentation" />
    <meta property="og:locale" content="es_ES" />
    {
      ogType === "article" && publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    {
      ogType === "article" && modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
      )
    }
    {
      ogType === "article" && author && (
        <meta property="article:author" content={author} />
      )
    }

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImage} />

    <!-- Structured Data (JSON-LD) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": ogType === "article" ? "Article" : "WebPage",
        headline: title,
        description: description,
        image: socialImage.toString(),
        url: canonicalURL.toString(),
        ...(author && { author: { "@type": "Person", name: author } }),
        ...(publishedTime && { datePublished: publishedTime }),
        ...(modifiedTime && { dateModified: modifiedTime }),
        publisher: {
          "@type": "Organization",
          name: "Ailurus Documentation",
          logo: {
            "@type": "ImageObject",
            url: new URL("/logo.png", Astro.site).toString(),
          },
        },
      })}
    />

    <title>{title}</title>

    <!-- Theme Script (runs before page renders to avoid flash) -->
    <script is:inline>
      (function () {
        const theme =
          localStorage.getItem("theme") ||
          (window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");

        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="transition-colors duration-300">
    <style is:global>
      /* Smooth transitions between pages */
      @media (prefers-reduced-motion: no-preference) {
        html {
          scroll-behavior: smooth;
        }

        a,
        button,
        .card,
        .nav-link {
          transition-property: color, background-color, border-color, transform,
            box-shadow;
          transition-duration: 200ms;
          transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Fade-in animation for content */
        @keyframes fadeIn {
          from {
            opacity: 0;
            transform: translateY(8px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }

        .document-view,
        .search-results,
        .result-item {
          animation: fadeIn 0.4s ease-out;
        }

        /* Stagger animation for lists */
        .result-item:nth-child(1) {
          animation-delay: 0ms;
        }
        .result-item:nth-child(2) {
          animation-delay: 50ms;
        }
        .result-item:nth-child(3) {
          animation-delay: 100ms;
        }
        .result-item:nth-child(4) {
          animation-delay: 150ms;
        }
        .result-item:nth-child(5) {
          animation-delay: 200ms;
        }
      }

      /* Respect user preference */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }

        html {
          scroll-behavior: auto;
        }
      }
    </style>
    <div class="relative flex min-h-screen flex-col">
      <Header />

      <main class="flex-1">
        <slot />
      </main>

      <Footer />

      <!-- Toast Notifications -->
      <Toaster client:only="react" />
    </div>
  </body>
</html>
