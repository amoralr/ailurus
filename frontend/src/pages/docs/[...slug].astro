---
import DocsLayout from "@/layouts/DocsLayout.astro";
import Sidebar from "@/shared/components/layout/Sidebar.astro";
import TOC from "@/shared/components/layout/TOC.astro";
import MarkdownRenderer from "@/markdown/components/MarkdownRenderer.astro";
import { documentsApi } from "@/services/api/documents.service";
import { MOCK_DOCUMENTS } from "@/mocks";
import { markdownService } from "@/markdown/services/markdown.service";
import { Badge } from "@/components/ui/badge";

// Dynamic rendering (removed getStaticPaths)

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/404");
}

const USE_MOCKS = import.meta.env.PUBLIC_USE_MOCKS === "true";

let document;

if (USE_MOCKS) {
  // Use mock data
  document = MOCK_DOCUMENTS.find(
    (doc) => doc.slug === slug && doc.status === "published"
  );
} else {
  // Fetch from API
  try {
    const apiDoc = await documentsApi.getDocumentBySlug(slug);
    // Convert API response to match mock structure
    document = {
      id: apiDoc.id,
      slug: apiDoc.slug,
      title: apiDoc.title,
      content: apiDoc.content,
      category: apiDoc.categoryId,
      subcategory: apiDoc.subcategory || undefined,
      path: apiDoc.path,
      status: apiDoc.status.toLowerCase() as "published",
      createdAt: apiDoc.createdAt,
      updatedAt: apiDoc.updatedAt,
      createdBy: apiDoc.createdBy,
      excerpt: apiDoc.excerpt || undefined,
    };
  } catch (error) {
    console.error(`[docs/${slug}] Failed to fetch document from API:`, error);
    // Fallback to mocks
    document = MOCK_DOCUMENTS.find(
      (doc) => doc.slug === slug && doc.status === "published"
    );
  }
}

if (!document) {
  return Astro.redirect("/404");
}

// Extract headings for TOC
const headings = markdownService.extractHeadings(document.content);

// Find prev/next documents
const currentIndex = MOCK_DOCUMENTS.findIndex((d) => d.slug === slug);
const prevDoc = currentIndex > 0 ? MOCK_DOCUMENTS[currentIndex - 1] : null;
const nextDoc =
  currentIndex < MOCK_DOCUMENTS.length - 1
    ? MOCK_DOCUMENTS[currentIndex + 1]
    : null;
---

<DocsLayout
  title={`${document.title} - Ailurus`}
  description={document.excerpt}
  ogType="article"
  author={document.createdBy}
  publishedTime={document.createdAt}
  modifiedTime={document.updatedAt}
>
  <Sidebar slot="sidebar" currentSlug={slug} />

  <article class="document-view">
    <header class="document-header">
      <div class="document-meta">
        <Badge variant="secondary">{document.category}</Badge>
        <time class="update-date" datetime={document.updatedAt}>
          Actualizado: {
            new Date(document.updatedAt).toLocaleDateString("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
      </div>

      <h1 class="document-title">{document.title}</h1>

      <div class="document-actions">
        <a href={`/docs/edit/${slug}`} class="edit-link">
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
            ></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
            ></path>
          </svg>
          Editar
        </a>
      </div>
    </header>

    <div class="document-content">
      <MarkdownRenderer content={document.content} />
    </div>

    <footer class="document-footer">
      <div class="document-info">
        <p class="author">Por: <strong>{document.createdBy}</strong></p>
      </div>

      <nav class="document-navigation">
        {
          prevDoc && (
            <a href={`/docs/${prevDoc.slug}`} class="nav-link prev">
              <span class="nav-label">← Anterior</span>
              <span class="nav-title">{prevDoc.title}</span>
            </a>
          )
        }
        {
          nextDoc && (
            <a href={`/docs/${nextDoc.slug}`} class="nav-link next">
              <span class="nav-label">Siguiente →</span>
              <span class="nav-title">{nextDoc.title}</span>
            </a>
          )
        }
      </nav>
    </footer>
  </article>

  <TOC slot="toc" headings={headings} />
</DocsLayout>

<style>
  .document-view {
    max-width: 850px;
    margin: 0 auto;
    width: 100%;
  }

  .document-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid hsl(var(--border));
  }

  .document-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .update-date {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }

  .document-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: hsl(var(--foreground));
    line-height: 1.2;
  }

  .document-actions {
    display: flex;
    gap: 0.75rem;
  }

  .edit-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    color: hsl(var(--foreground));
    background: hsl(var(--secondary));
    border: 1px solid hsl(var(--border));
    border-radius: 0.375rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .edit-link:hover {
    border-color: hsl(var(--primary));
    color: hsl(var(--primary));
    background: hsl(var(--primary) / 0.1);
  }

  .edit-link svg {
    width: 16px;
    height: 16px;
  }

  .document-content {
    margin: 2rem 0;
  }

  .document-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid hsl(var(--border));
  }

  .document-info {
    margin-bottom: 2rem;
  }

  .author {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    margin: 0;
  }

  .author strong {
    color: hsl(var(--foreground));
  }

  .document-navigation {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background: hsl(var(--secondary));
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .nav-link:hover {
    border-color: hsl(var(--primary));
    background: hsl(var(--primary) / 0.05);
  }

  .nav-link.next {
    text-align: right;
    align-items: flex-end;
  }

  .nav-label {
    font-size: 0.75rem;
    font-weight: 500;
    color: hsl(var(--primary));
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .nav-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
  }

  /* Responsive */
  @media (max-width: 768px) {
    .document-title {
      font-size: 2rem;
    }

    .document-navigation {
      grid-template-columns: 1fr;
    }

    .nav-link.next {
      text-align: left;
      align-items: flex-start;
    }
  }
</style>
